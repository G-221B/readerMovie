/* pages/posts/posts-detail/posts-detail.wxss */
.container {
    position: relative;
    display: flex;
    flex-direction: column;
}
.bgImg {
    width: 100%;
    height: 500rpx;
}
.audio {
    position: absolute;
    width: 102rpx;
    height: 110rpx;
    top: 180rpx;
    left: 50%;
    transform: translateX(-50%);
    opacity: .6;
}
.info {
    display: flex;
    align-items: center;
    padding: 20rpx 20rpx;
}
.info image {
    width: 64rpx;
    height: 64rpx;
}
.info text {
    margin-left: 20rpx;
    color: #999;
    font-size: 26rpx;
}
.info .info-name {
    font-size: 32rpx;
}
.title {
    margin:24rpx 20rpx;
    color: #666;
    font-size: 34rpx;
    font-weight: bold;
}
.logo {
    position: relative;
    padding: 20rpx 20rpx;
}
.logo image {
    float: right;
    width: 96rpx;
    height: 96rpx;
    margin-left: 26rpx;
}
.line {
    z-index: -1;
    position: absolute;
    top: 50%;
    right: 0;
    width: 100%;
    border-bottom: 1px solid #e5e5e5;
}
.content {
    padding:0 20rpx 30rpx;
    color: #666;
    line-height: 44rpx;
    letter-spacing: 2px;
}