<template name="posts-item">
	<view class="post-container">
		<view class="post-author-date">
			<image src="{{avatar}}" class="post-author" />
			<text class="post-date">{{date}}</text>
		</view>
		<text class="post-title">{{title}}</text>
		<image src="{{imgSrc}}" class="post-img" />
		<text class="post-content">{{content}}</text>
		<view class="post-like">
			<image class="post-like-img" src="/images/icon/chat.png" />
			<text class="post-like-num">{{collection}}</text>
			<image src="/images/icon/view.png" class="post-like-img" />
			<text class="post-like-num">{{reading}}</text>
		</view>
	</view>
</template>

